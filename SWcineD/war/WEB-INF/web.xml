<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>registerservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loginservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logoutservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>movieaddservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.MovieAddServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>moviecommentaddservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.MovieCommentAddServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>searchservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.SearchServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>showimageservlet</servlet-name>
		<servlet-class>com.lvaleromsw.swcine.ShowImageServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>registerservlet</servlet-name>
		<url-pattern>/registerservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loginservlet</servlet-name>
		<url-pattern>/loginservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logoutservlet</servlet-name>
		<url-pattern>/logoutservlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>moviecommentaddservlet</servlet-name>
		<url-pattern>/moviecommentaddservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>movieaddservlet</servlet-name>
		<url-pattern>/movieaddservlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>searchservlet</servlet-name>
		<url-pattern>/searchservlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>showimageservlet</servlet-name>
		<url-pattern>/showimageservlet</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>